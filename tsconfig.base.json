{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@symphonyscript/core": ["packages/core/src/index.ts"],
      "@symphonyscript/core/*": ["packages/core/src/*"],
      "@symphonyscript/runtime-webaudio": ["packages/runtime-webaudio/src/index.ts"],
      "@symphonyscript/runtime-webaudio/*": ["packages/runtime-webaudio/src/*"],
      "@symphonyscript/live": ["packages/live/src/index.ts"],
      "@symphonyscript/live/*": ["packages/live/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/dist"]
}
