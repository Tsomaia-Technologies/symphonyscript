{
  "name": "@symphonyscript/kernel",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@symphonyscript/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "../../dist/packages/kernel",
          "main": "packages/kernel/src/index.ts",
          "tsConfig": "packages/kernel/tsconfig.build.json",
          "declaration": true,
          "format": [
            "esm"
          ],
          "declarationRootDir": "packages/kernel/src"
        }
      },
      "test": {
        "executor": "@nx/jest:jest",
        "outputs": [
          "{projectRoot}/test-output/jest/coverage"
        ],
        "options": {
          "jestConfig": "packages/kernel/jest.config.cts"
        }
      }
    }
  },
  "dependencies": {}
}
